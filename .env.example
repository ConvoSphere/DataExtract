# Universal File Extractor API - Environment Configuration

# API Configuration
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# File Processing
MAX_FILE_SIZE=157286400  # 150MB in bytes
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_EXTRACTIONS=10
WORKER_PROCESSES=4
TEMP_DIR=/tmp/file_extractor

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Monitoring and Observability
ENABLE_OPENTELEMETRY=true
JAEGER_HOST=jaeger
JAEGER_PORT=6831
PROMETHEUS_ENABLED=true
ENABLE_REQUEST_LOGGING=true
ENABLE_EXTRACTION_LOGGING=true

# Docling Configuration
ENABLE_DOCLING=true
ENABLE_ADVANCED_ANALYSIS=true
DOCLING_TIMEOUT=300
DOCLING_MODEL_PATH=

# OCR Configuration
EXTRACT_IMAGE_TEXT=true
EXTRACT_AUDIO_TRANSCRIPT=false
OCR_LANGUAGES=eng,deu
TESSERACT_CONFIG=

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Production Settings
GRAFANA_PASSWORD=admin
GRAFANA_USER=admin
ELASTICSEARCH_PASSWORD=
KIBANA_PASSWORD=

# External Services (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Database (if using external database)
DATABASE_URL=
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
